@model EXE.ViewModels.RegisterViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Intercom</title>
	<link rel="shortcut icon" type="image/png" href="/imgs/logoEXE-v2-removebg-preview.png" />
	<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
	<link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap'>
	<link rel="stylesheet" href="/css/Login.css">
</head>
<body>
	<div class="login-wrap">
		<div class="login-html">
			<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign Up</label>
			<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>

			<div class="login-form">
				<div class="sign-up-html" style="  height: 105%;">
					@using (Html.BeginForm("Register", "Account", FormMethod.Post))
					{
						@Html.AntiForgeryToken()

						<div class="group">
							<label asp-for="FullName" class="label">FullName</label>
							<input asp-for="FullName" class="input" />
							<span asp-validation-for="FullName" class="text-danger" style="color:red"></span>
						</div>

						<div class="group">
							<label asp-for="Email" class="label">Email</label>
							<input asp-for="Email" class="input" />
							<span asp-validation-for="Email" class="text-danger" style="color:red"></span>
						</div>

						<div class="group">
							<label asp-for="Password" class="label">Password</label>
							<input asp-for="Password" class="input" type="password" />
							<span asp-validation-for="Password" class="text-danger" style="color:red"></span>
						</div>

						<div class="group">
							<label asp-for="ConfirmPassword" class="label">Repeat Password</label>
							<input asp-for="ConfirmPassword" class="input" type="password" />
							<span asp-validation-for="ConfirmPassword" class="text-danger" style="color:red"></span>
						</div>

						<div class="group">
							<label asp-for="Phone" class="label">Phone number</label>
							<input asp-for="Phone" class="input" />
							<span asp-validation-for="Phone" class="text-danger" style="color:red"></span>
						</div>
						<div class="group">
							<label asp-for="InvitationCode" class="label">Invitation Code (if any)</label>
							<input asp-for="InvitationCode" class="input" />
							<span asp-validation-for="InvitationCode" class="text-danger" style="color:red"></span>
						</div>
						<div class="group">
							<input type="submit" class="button" value="Sign Up" />
						</div>

						<div class="foot-lnk">
							<a href="@Url.Action("Login", "Account")">Already Member?</a>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</body>
</html>
